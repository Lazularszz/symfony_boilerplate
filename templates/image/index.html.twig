{% extends 'base.html.twig' %}

{% block title %}Images{% endblock %}

{% block body %}
    <h1>Liste des images</h1>

    <div class="image-list-container">
        {% for image in images %}
            <div class="image-card">
                <img src="{{ asset(image.path) }}" alt="Image {{ image.id }}" style="max-width: 200px; height: auto;">
                <p>{{ image.path|split('/')|last|split('.')|first|capitalize }}</p>
            </div>
        {% else %}
            <p>Aucune image Ã  afficher.</p>
        {% endfor %}
    </div>
    
    <style>
        .image-list-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .image-card {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }
    </style>
{% endblock %}
